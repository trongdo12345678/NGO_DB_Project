
@{
    Layout = "_LayoutAdmin";
    List<NGO_DB_Project.Models.ProjectType> Prot = new List<NGO_DB_Project.Models.ProjectType>();
    if (ViewBag.ProT != null) { Prot = ViewBag.ProT; }
}


@section naviheader {

    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Danh mục</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh Mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách danh mục</h3>

            <div class="card-tools">
                <a href="addpt" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr class="text-center">
                        <th>STT</th>
                        <th>TypeName </th>
                        <th>Function</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (NGO_DB_Project.Models.ProjectType item in Prot)
                    {
                        <tr id="trow_@item.Id">
                            <td class="text-center">@item.Id</td>
                            <td class="text-center">@item.TypeName</td>
                            <td class="text-center">
                                <a href="#" class="btn btm-sm btn-primary">Sửa</a>
                                <a asp-action="DeletePT" asp-route-id="@item.Id" class="btn btm-sm btn-danger btnDelete">Xóa</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
